<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/iteam_shape"
        android:padding="15dp"

        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/iteam_imageview"
            android:src="@mipmap/profileimage"></de.hdodenhof.circleimageview.CircleImageView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="26dp"
                android:fontFamily="@font/comfortaa_light"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:id="@+id/iteam_name"
                ></TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Statues"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/comfortaa_light"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"
                android:id="@+id/iteam_statues"></TextView>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>